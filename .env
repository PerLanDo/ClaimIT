# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=anon
SUPABASE_SERVICE_ROLE_KEY=service_role

# JWT Configuration
JWT_SECRET=devsecret
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Backblaze B2 Configuration (for image storage)
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=claimit-images
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com
# Set to 'false' for public bucket, 'true' or omit for private bucket (recommended)
B2_BUCKET_PRIVATE=true
# URL expiration for private buckets in seconds (default: 86400 = 24 hours)
B2_URL_EXPIRY=86400

# Vercel Configuration (for deployment)
VERCEL_TOKEN=your_vercel_token
VERCEL_TEAM_ID=your_vercel_team_id
VERCEL_PROJECT_ID=your_vercel_project_id

# CORS Configuration
FRONTEND_URL=http://localhost:3000
